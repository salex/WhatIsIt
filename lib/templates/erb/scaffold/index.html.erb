<fieldset class="index-list">
  <legend><%= plural_table_name.titleize %>
  	<span class="actions">
      <%%= link_to 'New <%= human_name %>', new_<%= singular_table_name %>_path %>
      <!--  model_breadcrumbs   -->
  	</span>
  </legend>

  <table>
    <tr class="list-header">
  <% for attribute in attributes -%>
      <th><%= attribute.human_name %></th>
  <% end -%>
      <th>Actions</th>
    </tr>

  <%% altswitch = false %>
  <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
  <%% altswitch = !altswitch %>
  <%% altclass = altswitch ? "" : "alt" %>
  <tr class="<%%=raw altclass%>" >
  <% for attribute in attributes -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end -%>
      <td>
        <%%= action_links(<%= singular_table_name %>) %>
      </td>
    </tr>
  <%% end %>
  </table>
</fieldset>

